<h1>********* Welcome to the longest word-game! *********</h1>
<div id="grid">
  <% @letters.each do |letter| %>
    <span><%= letter %></span>
  <% end %>
</div>
<p>*****************************************************</p>
<div id="post-answer">
  <h2>What is the longest word you can find?</h2>
  <form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="answer" placeholder="Your best answer...">
  <%= hidden_field_tag :letters, @letters %>
  <input type="submit">
</form>
</div>
